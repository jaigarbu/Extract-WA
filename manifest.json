{
  "manifest_version": 3,
  "name": "WhatsApp Chat Extractor",
  "version": "1.0",
  "description": "Extrae chats de WhatsApp Web y los guarda como texto.",
  "permissions": ["scripting", "activeTab", "downloads"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"]
    }
  ]
}
